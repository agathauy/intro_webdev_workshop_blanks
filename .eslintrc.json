{
    "extends": "airbnb-base",
    "env": {
        "node": true
    },
    "rules": {
        "quotes": [1, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "prefer-const": 1,
        "no-unused-vars": [1],
        "no-undef": [1],
        "no-shadow": [1],
        "no-param-reassign": [1],
        "camelcase": [0],
        "prefer-destructuring": 0,
        "no-underscore-dangle": 0,
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "no-loop-func": 0,
        "no-unused-expressions": [2, { "allowShortCircuit":true}],
        "consistent-return": 0,
        "max-len": 0,
        "indent": 0,
        "object-shorthand": 0,
        "arrow-body-style": 0,
        "comma-dangle": 0,
        "prefer-template": [1],
        "no-else-return": [1],
        "padded-blocks": 0,
        "global-require": [1],
        "import/no-dynamic-require": [1]
    }
}